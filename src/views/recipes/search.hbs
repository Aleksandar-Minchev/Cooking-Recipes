{{setPageTitle "Home Cooking Recipes | Search"}}
<section class="search-container">
            <h2>Search Recipes</h2>
            <form method="">
                <input type="text" id="search" name="search" value="{{filter.search}}"placeholder="Search for recipes...">
                <button type="submit">Search</button>
            </form>
            <div class="search-results">
                {{#each recipes}}
                {{>recipes}}
                {{else}}
                <p class="no-match">There are no recipes found yet!</p>
                {{/each}}
            </div>
        </section>